<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/partylogin"
            android:scaleType="centerCrop"
    />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_centerHorizontal="true">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/logintext"
                          android:fontFamily="@font/acmeregular"
                          android:textColor="@color/white"
                          android:textSize="48sp"
                          android:textAlignment="center"
                          android:padding="45dp"
                />


                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/loginsocial"
                          android:fontFamily="@font/acmeregular"
                          android:textColor="@color/white"
                          android:textSize="18sp"
                          android:textAlignment="center"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="10dp"
                          android:layout_marginStart="40dp"
                          android:layout_marginEnd="40dp"
                />

                </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="40dp"
            >


                <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_google"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="20dp"
                        fancy:fb_textFont="@font/acmeregular"
                        fancy:fb_borderColor="#000000"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#FFFFFF"
                        fancy:fb_focusColor="#EBEBEB"
                        fancy:fb_iconPosition="left"
                        fancy:fb_iconResource="@drawable/ic_search"
                        fancy:fb_iconPaddingTop="10dp"
                        fancy:fb_iconPaddingRight="10dp"
                        fancy:fb_radius="10dp"
                        fancy:fb_text="@string/logingoogle"
                        fancy:fb_textSize="18sp"
                        fancy:fb_textColor="@color/black" />

                <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        fancy:fb_textFont="@font/acmeregular"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#2653CE"
                        fancy:fb_focusColor="#1B6196"
                        fancy:fb_iconPosition="left"
                        fancy:fb_iconResource="@drawable/ic_facebook"
                        fancy:fb_iconPaddingTop="10dp"
                        fancy:fb_iconPaddingRight="10dp"
                        fancy:fb_radius="10dp"
                        fancy:fb_text="@string/loginfacebook"
                        fancy:fb_textSize="18sp"
                        fancy:fb_textColor="#FFFFFF" />

            </LinearLayout>


        </RelativeLayout>


</RelativeLayout>